{
    "exclude": [
        "node_modules"
    ],
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "*": [
                "*",
                "src/*",
            ]
        },
        "allowJs": false,
        "checkJs": false,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "strict": true,
        "strictNullChecks": true,
        "moduleResolution": "node",
        "module": "es2015",
        "target": "es2017",
        "jsx": "react"
    }
}